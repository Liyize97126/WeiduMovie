<?xml version="1.0" encoding="utf-8"?>
<!--  第三方刷新框架   -->
<com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/twinkling_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_240"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/dp_15">

                <com.stx.xhb.androidx.XBanner
                    android:id="@+id/x_ban"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_175"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/dp_10"/>

                <TextView
                    android:id="@+id/x_ban_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1/1"
                    android:textSize="@dimen/sp_22"
                    android:textColor="@color/colorTextWrite"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_6"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1E2444"
                android:padding="@dimen/dp_13">

                <ImageView
                    android:id="@+id/zzry_ding"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:src="@drawable/zzry"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_16"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="正在热映"
                    android:textColor="@color/colorTextWrite"
                    android:textSize="@dimen/sp_18"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/zzry_ding"
                    android:layout_marginLeft="@dimen/dp_12"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多"
                    android:textColor="@color/colorTextWrite"
                    android:textSize="@dimen/sp_18"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_12"/>

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/zzry_recy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1E2444"
                android:padding="@dimen/dp_13"
                android:layout_marginTop="@dimen/dp_10">

                <ImageView
                    android:id="@+id/jjsy_ding"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:src="@drawable/jjsy"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_16"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="即将上映"
                    android:textColor="@color/colorTextWrite"
                    android:textSize="@dimen/sp_18"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/jjsy_ding"
                    android:layout_marginLeft="@dimen/dp_12"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多"
                    android:textColor="@color/colorTextWrite"
                    android:textSize="@dimen/sp_18"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_12"/>

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/jjsy_recy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1E2444"
                android:padding="@dimen/dp_13"
                android:layout_marginTop="@dimen/dp_10">

                <ImageView
                    android:id="@+id/rndy_ding"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:src="@drawable/rndy"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_16"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="热门电影"
                    android:textColor="@color/colorTextWrite"
                    android:textSize="@dimen/sp_18"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/rndy_ding"
                    android:layout_marginLeft="@dimen/dp_12"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多"
                    android:textColor="@color/colorTextWrite"
                    android:textSize="@dimen/sp_18"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_12"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_160"
                android:background="@color/colorZhanBackground"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_25">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/horizontal_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    app:actualImageScaleType="fitXY"
                    app:failureImage="@drawable/movie_zhan"
                    app:failureImageScaleType="center"
                    app:placeholderImage="@drawable/movie_zhan"
                    app:placeholderImageScaleType="center"/>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电影名称"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/colorTextWrite"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dp_6"
                    android:layout_marginLeft="@dimen/dp_15"/>

                <TextView
                    android:id="@+id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8.8分"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/colorTextWrite"
                    android:layout_toRightOf="@id/name"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dp_7"
                    android:layout_marginLeft="@dimen/dp_10"/>

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rndy_recy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>
