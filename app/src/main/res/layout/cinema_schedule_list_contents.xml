<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="#1E2444"
    android:padding="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image_url"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_140"
        android:background="@color/colorZhanBackground"
        app:failureImage="@drawable/movie_zhan"
        app:failureImageScaleType="center"
        app:placeholderImage="@drawable/movie_zhan"
        app:placeholderImageScaleType="center"
        android:layout_gravity="center_vertical"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_15">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电影名称"
            android:textColor="@color/colorTextWrite"
            android:textSize="@dimen/sp_18"
            android:layout_marginTop="@dimen/dp_5"
            android:ellipsize="end"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/director"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="导演：XX"
            android:textColor="@color/colorTextWrite"
            android:textSize="@dimen/sp_16"
            android:layout_marginTop="@dimen/dp_12"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_below="@id/name"/>

        <TextView
            android:id="@+id/starring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主演：XXX"
            android:textColor="@color/colorTextWrite"
            android:textSize="@dimen/sp_16"
            android:layout_marginTop="@dimen/dp_12"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_below="@id/director"/>

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评分：9.9分"
            android:textColor="@color/colorTextWrite"
            android:textSize="@dimen/sp_16"
            android:layout_marginTop="@dimen/dp_12"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_below="@id/starring"/>

        <Button
            android:id="@+id/choose_seat_do"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_30"
            android:text="购票"
            android:textSize="@dimen/sp_16"
            android:background="@drawable/button_style_red"
            android:textColor="@color/colorTextWrite"
            android:focusable="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</LinearLayout>
