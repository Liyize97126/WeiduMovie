<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorHomePageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_180"
        android:background="@drawable/my_bg"/>

    <RelativeLayout
        android:id="@+id/title_ding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的"
            android:textSize="@dimen/sp_22"
            android:textColor="@color/colorTextWrite"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/all_sys_msg_do"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_22"
            android:src="@drawable/xt_messages"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_ding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5">

            <RelativeLayout
                android:id="@+id/login_register_do"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_110"
                android:background="@drawable/user_info_background"
                android:padding="@dimen/dp_20">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/head_pic"
                    android:layout_width="@dimen/dp_75"
                    android:layout_height="@dimen/dp_75"
                    android:layout_centerVertical="true"
                    app:placeholderImage="@drawable/head"
                    app:failureImage="@drawable/head"
                    app:roundAsCircle="true"/>

                <TextView
                    android:id="@+id/nick_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登录/注册"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp_20"
                    android:layout_toRightOf="@id/head_pic"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_22"/>

                <ImageView
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:src="@drawable/shape_black"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_movie_ticket_do"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@drawable/function_black_background"
                android:layout_marginTop="@dimen/dp_10">

                <ImageView
                    android:id="@+id/ticket_ding"
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_33"
                    android:src="@drawable/movie_tickets"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电影票"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/colorTextWrite"
                    android:layout_toRightOf="@id/ticket_ding"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_m_5"/>

                <ImageView
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:src="@drawable/shape_write"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_20"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/function_black_background"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:padding="@dimen/dp_10">

                        <ImageView
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:src="@drawable/my_focus"
                            android:layout_gravity="center_horizontal"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的关注"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_15"
                            android:textSize="@dimen/sp_16"
                            android:textColor="@color/colorTextWrite"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:padding="@dimen/dp_10">

                        <ImageView
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:src="@drawable/my_appointment"
                            android:layout_gravity="center_horizontal"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的预约"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_15"
                            android:textSize="@dimen/sp_16"
                            android:textColor="@color/colorTextWrite"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:padding="@dimen/dp_10">

                        <ImageView
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:src="@drawable/goupiaojilu"
                            android:layout_gravity="center_horizontal"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="购票记录"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_15"
                            android:textSize="@dimen/sp_16"
                            android:textColor="@color/colorTextWrite"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:padding="@dimen/dp_10">

                        <ImageView
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:src="@drawable/watched_movies"
                            android:layout_gravity="center_horizontal"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="看过的电影"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_15"
                            android:textSize="@dimen/sp_16"
                            android:textColor="@color/colorTextWrite"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:padding="@dimen/dp_10">

                        <ImageView
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:src="@drawable/my_comments"
                            android:layout_gravity="center_horizontal"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的评论"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_15"
                            android:textSize="@dimen/sp_16"
                            android:textColor="@color/colorTextWrite"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:padding="@dimen/dp_10">

                        <ImageView
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:src="@drawable/yijianfankui"
                            android:layout_gravity="center_horizontal"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="意见反馈"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_15"
                            android:textSize="@dimen/sp_16"
                            android:textColor="@color/colorTextWrite"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:padding="@dimen/dp_10">

                        <ImageView
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:src="@drawable/settings"
                            android:layout_gravity="center_horizontal"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="设置"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_15"
                            android:textSize="@dimen/sp_16"
                            android:textColor="@color/colorTextWrite"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="2"
                        android:padding="@dimen/dp_10"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
