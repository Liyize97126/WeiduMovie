<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMovieDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_25"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="剧情简介"
            android:textColor="@color/colorTextWrite"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/sp_16"
            android:text="电影简介内容"
            android:textColor="@color/colorTextWrite"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="演职人员"
            android:textColor="@color/colorTextWrite"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_30"/>

        <TextView
            android:id="@+id/movie_director_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/sp_16"
            android:text="导演（2）"
            android:textStyle="bold"
            android:textColor="@color/colorTextWrite"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/movie_director_recy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"/>

        <TextView
            android:id="@+id/movie_actor_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/sp_16"
            android:text="演员（10）"
            android:textStyle="bold"
            android:textColor="@color/colorTextWrite"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/movie_actor_recy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
