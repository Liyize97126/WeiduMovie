<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorActivityBackground"
    tools:context=".activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_300"
        android:background="@drawable/login_register_background"/>

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:layout_margin="@dimen/dp_25"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_250"
        android:orientation="vertical">

        <EditText
            android:id="@+id/email"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/lo_re_edit_kuang"
            android:hint="请输入邮箱账号"
            android:padding="@dimen/dp_15"
            android:inputType="text"
            android:textColor="#FFFFFF"
            android:textColorHint="#9A9A9A"
            android:textSize="@dimen/dp_18"/>

        <RelativeLayout
            android:layout_width="@dimen/dp_300"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10">

            <EditText
                android:id="@+id/pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@drawable/lo_re_edit_kuang"
                android:hint="请输入密码"
                android:padding="@dimen/dp_15"
                android:inputType="textPassword"
                android:textColor="#FFFFFF"
                android:textColorHint="#9A9A9A"
                android:textSize="@dimen/dp_18"/>

            <Button
                android:id="@+id/forget_password"
                android:layout_width="@dimen/dp_95"
                android:layout_height="@dimen/dp_50"
                android:layout_alignParentRight="true"
                android:background="@drawable/lo_re_edit_right_button"
                android:text="忘记密码"
                android:textSize="@dimen/sp_14"
                android:textColor="#353535"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/jump_register_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_200"
            android:layout_marginTop="@dimen/dp_20"
            android:text="暂无账号 立即注册"
            android:textColor="#9A9A9A"
            android:textSize="@dimen/dp_16" />

        <Button
            android:id="@+id/login_do"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/button_style_pink"
            android:text="登录"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/dp_18" />

        <RelativeLayout
            android:layout_width="@dimen/dp_300"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginBottom="@dimen/dp_25">

            <TextView
                android:id="@+id/wen_ding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="或"
                android:textColor="#FFFFFF"
                android:layout_centerInParent="true"
                android:textSize="@dimen/sp_16"/>

            <LinearLayout
                android:layout_width="@dimen/dp_95"
                android:layout_height="@dimen/dp_3"
                android:background="#FFFFFF"
                android:layout_toLeftOf="@id/wen_ding"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"/>

            <LinearLayout
                android:layout_width="@dimen/dp_95"
                android:layout_height="@dimen/dp_3"
                android:background="#FFFFFF"
                android:layout_toRightOf="@id/wen_ding"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"/>

        </RelativeLayout>

        <ImageButton
            android:id="@+id/wechat_login_do"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_style_we_chat"
            android:src="@drawable/my_login_wechat"/>

    </LinearLayout>

</RelativeLayout>